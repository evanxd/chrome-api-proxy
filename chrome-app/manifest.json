{
  "manifest_version": 2,
  "name": "Chrome API Proxy",
  "description": "Call Chrome App APIs from a Webpage.",
  "version": "0.0.6",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "externally_connectable": {
    "matches": ["http://wotjs.io/*", "http://localhost:8080/*"]
  },
  "url_handlers": {
    "start_app": {
      "title": "Start Chrome API Proxy App",
      "matches": [
        "http://wotjs.io/maker/start-app.html",
        "http://localhost:8080/start-app.html"
      ]
    }
  },
  "permissions": [
    "alwaysOnTopWindows",
    "serial"
  ]
}
